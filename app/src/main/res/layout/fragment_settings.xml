<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSettingsBackground"
        tools:context=".ui.dashboard.settings.SettingsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileImage"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/size_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_profile_image" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/businessName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_08"
                android:fontFamily="@font/medium"
                android:text="Varun chakkaravarthi"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImage"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_08"
                android:layout_marginBottom="@dimen/size_32"
                android:fontFamily="@font/regular"
                android:text="+91 9500 343 321"
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/businessName"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/size_16"
                app:layout_constraintBottom_toBottomOf="@+id/businessName"
                app:layout_constraintStart_toEndOf="@+id/businessName"
                app:layout_constraintTop_toTopOf="@+id/businessName"
                app:srcCompat="@drawable/ic_edit_profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/addressesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_addresses"
                android:drawableEnd="@drawable/ic_order_link"
                android:drawablePadding="@dimen/size_24"
                android:fontFamily="@font/regular"
                android:onClick="@{clickListener}"
                android:padding="@dimen/size_16"
                android:text="Manage addresses"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/languagesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_change_language"
                android:drawableEnd="@drawable/ic_order_link"
                android:drawablePadding="@dimen/size_24"
                android:fontFamily="@font/regular"
                android:onClick="@{clickListener}"
                android:padding="@dimen/size_16"
                android:text="Change language"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressesButton" />


            <TextView
                android:id="@+id/termsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_terms"
                android:drawableEnd="@drawable/ic_order_link"
                android:drawablePadding="@dimen/size_24"
                android:fontFamily="@font/regular"
                android:onClick="@{clickListener}"
                android:padding="@dimen/size_16"
                android:text="Terms &amp; conditions"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/languagesButton" />

            <TextView
                android:id="@+id/privacyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_privacy_policy"
                android:drawableEnd="@drawable/ic_order_link"
                android:drawablePadding="@dimen/size_24"
                android:fontFamily="@font/regular"
                android:onClick="@{clickListener}"
                android:padding="@dimen/size_16"
                android:text="Pivacy policy"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/termsButton" />

            <TextView
                android:id="@+id/aboutButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_about_us"
                android:drawableEnd="@drawable/ic_order_link"
                android:drawablePadding="@dimen/size_24"
                android:fontFamily="@font/regular"
                android:onClick="@{clickListener}"
                android:padding="@dimen/size_16"
                android:text="About us"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/privacyButton" />

            <TextView
                android:id="@+id/referButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_refer_friends"
                android:drawableEnd="@drawable/ic_order_link"
                android:drawablePadding="@dimen/size_24"
                android:fontFamily="@font/regular"
                android:onClick="@{clickListener}"
                android:padding="@dimen/size_16"
                android:text="Refer friends"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutButton" />

            <TextView
                android:id="@+id/logoutButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_sign_out"
                android:drawableEnd="@drawable/ic_order_link"
                android:drawablePadding="@dimen/size_24"
                android:fontFamily="@font/regular"
                android:onClick="@{clickListener}"
                android:padding="@dimen/size_16"
                android:text="Logout"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/referButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>