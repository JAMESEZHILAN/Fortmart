<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="submitClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/colorWhite"
        tools:context=".ui.login.language.LanguageFragment">

        <RadioGroup
            android:id="@+id/languageRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_50"
            android:background="@drawable/bg_language_radio_button"
            android:elevation="@dimen/size_04"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/phoneSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_chainStyle="packed">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_08"
                android:button="@drawable/selector_language_radio"
                android:checked="true"
                android:fontFamily="@font/regular"
                android:layoutDirection="rtl"
                android:padding="@dimen/size_08"
                android:paddingStart="@dimen/size_16"
                android:text="English"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/text_size_18" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/tamil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_08"
                android:button="@drawable/selector_language_radio"
                android:fontFamily="@font/regular"
                android:layoutDirection="rtl"
                android:padding="@dimen/size_08"
                android:paddingStart="@dimen/size_16"
                android:text="தமிழ்"
                android:textSize="@dimen/text_size_18" />
        </RadioGroup>

        <Button
            android:id="@+id/phoneSubmit"
            style="?android:selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_24"
            android:background="@drawable/bg_login_submit"
            android:clickable="false"
            android:elevation="@dimen/size_08"
            android:focusable="false"
            android:onClick="@{submitClickListener}"
            android:paddingStart="@dimen/size_16"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/languageRadioGroup"
            app:layout_constraintStart_toStartOf="@+id/languageRadioGroup"
            app:layout_constraintTop_toBottomOf="@+id/languageRadioGroup" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_fortmart" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_language_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>